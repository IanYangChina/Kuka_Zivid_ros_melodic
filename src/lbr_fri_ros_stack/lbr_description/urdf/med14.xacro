            <axis xyz="0.0 0.0 0.01"/>
            <limit effort="${max_effort}" lower="${-170 * PI / 180}" upper="${170 * PI / 180}" velocity="${max_velocity}"/>
            <safety_controller 
                soft_lower_limit="${-168 * PI / 180}"
